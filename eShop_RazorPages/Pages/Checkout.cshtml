@page
@model CheckoutModel
@{
    ViewData["Title"] = "Checkout";
}

<h2>Checkout</h2>

<form method="post">
    <div>
        <label for="shippingAddress">Shipping Address:</label>
        <input type="text" id="shippingAddress" name="shippingAddress" required>
    </div>

    <button type="submit">Submit Order</button>
</form>

