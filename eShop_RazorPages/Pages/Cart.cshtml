@page
@model CartModel

<div class="container">
    <h2>Shopping Cart</h2>

    <table class="table">
        <thead>
            <tr>
                <th>Product ID</th>
                <th>Quantity</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.ShoppingCart)
            {
                    <tr>
                        <td>@item.ProductId</td>
                        <td>@item.Quantity</td>
                    </tr>
            }
        </tbody>
    </table>
</div>
